@model LibraryProject.Application.DTO.Identity.InitialDTO.RegisterDTO

<style>
    /* ================================================
                        🧾 ENVOLTORIO GENERAL
            ================================================== */
    .register-wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    /* ================================================
                        🧾 FORMULARIO
            ================================================== */
    .register-container {
        max-width: 600px;
        background-color: white;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
        color: #333;
    }

        .register-container h2 {
            font-size: 26px;
            margin-bottom: 10px;
            color: #360130;
        }

        .register-container p {
            margin-bottom: 20px;
            font-size: 14px;
            color: #666;
        }

    .form-row {
        display: flex;
        gap: 20px;
        margin-bottom: 15px;
    }

    .form-group {
        flex: 1;
        display: flex;
        flex-direction: column;
    }

        .form-group label {
            font-weight: 600;
            margin-bottom: 5px;
        }

    .form-control {
        padding: 10px;
        border-radius: 6px;
        border: 1px solid #ccc;
        font-size: 14px;
        transition: border-color 0.3s;
        background-color: white;
        color: #333;
    }

        .form-control:focus {
            border-color: #360130;
            outline: none;
        }

    .terms-check {
        margin-top: 15px;
        margin-bottom: 10px;
        font-size: 14px;
        display: flex;
        gap: 10px;
        align-items: flex-start;
    }

    /* ================================================
                        🧾 BOTÓN DE REGISTRO
           ================================================== */
    .btn-primary {
        width: 100%;
        padding: 12px;
        background-color: #360130;
        border: 2px solid #61495e;
        font-size: 16px;
        font-weight: bold;
        color: #fff;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
        cursor: pointer;
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #4d0240;
            box-shadow: 0 6px 14px rgba(0, 0, 0, 0.25);
            transform: scale(1.02);
        }

    /* ================================================
                        🧾 ENLACE "¿Ya tienes cuenta?"
            ================================================== */
    .back-link {
        display: block;
        margin-top: 20px;
        font-size: 14px;
        color: #360130;
        text-decoration: none;
        transition: color 0.3s ease;
    }

        .back-link:hover {
            color: #61495e;
        }

    .icon-back {
        margin-right: 8px;
    }

    .admin-link {
        color: #6c757d;
        font-size: 0.95rem;
        transition: color 0.2s ease;
    }

        .admin-link:hover {
            color: #0d6efd;
            text-decoration: underline;
        }

    .icon-back {
        margin-right: 5px;
    }

    /* ================================================
            🧾 Estilos para el modal
        ================================================== */

    .modal-content {
        border-radius: 10px;
        border: none;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
    }

    .modal-header {
        background-color: #360130;
        color: white;
        border-bottom: none;
        border-radius: 10px 10px 0 0;
    }

    .modal-title {
        font-weight: 600;
    }

    .modal-body {
        padding: 25px;
    }

    .modal-footer {
        border-top: none;
        background-color: #f8f9fa;
        border-radius: 0 0 10px 10px;
    }

    .btn-close {
        filter: invert(1);
    }


    /* modal */
    * Asegura que el modal esté por encima de todo */
    .modal {
        z-index: 1060 !important; /* Bootstrap usa 1050 por defecto */
    }

    /* Fondo del modal */
    .modal-backdrop {
        z-index: 1040 !important;
        background-color: rgba(0, 0, 0, 0.5);
    }

    /* Si usas algún framework que pueda interferir */
    body.modal-open {
        overflow: auto !important;
        padding-right: 0 !important;
    }
    
</style>

<div class="register-wrapper">
    <div class="register-container">
        <h2>Crea tu cuenta</h2>
        <p>Completa el formulario para registrarte y acceder a nuestra biblioteca.</p>

        <form asp-action="Register" method="post">
            <div class="form-row">
                <div class="form-group">
                    <label asp-for="FirstName">Nombre</label>
                    <input asp-for="FirstName" class="form-control" placeholder="Tu nombre" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="LastName">Apellido</label>
                    <input asp-for="LastName" class="form-control" placeholder="Tu apellido" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Email">Correo electrónico</label>
                <input asp-for="Email" class="form-control" placeholder="tucorreo@ejemplo.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label asp-for="Password">Contraseña</label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Crea una contraseña" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ConfirmPassword">Confirmar contraseña</label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Repite la contraseña" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="PhoneNumber">Teléfono (opcional)</label>
                <input asp-for="PhoneNumber" class="form-control" placeholder="Tu número de teléfono" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div class="terms-check">
                <input asp-for="AcceptedTerms" type="checkbox" id="acceptTerms" />
                <label for="acceptTerms">
                    He leído y acepto los <a href="/terms" target="_blank">Términos y Condiciones</a> y la <a href="/privacy" target="_blank">Política de Privacidad</a>.
                </label>
            </div>

            <span asp-validation-for="AcceptedTerms" class="text-danger d-block mb-3"></span>
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>

            <button class="btn btn-primary w-100 mt-2" type="submit">Crear cuenta</button>
        </form>

        <div class="mt-3 text-center">
            <a asp-action="Login" class="back-link d-block mb-2">
                <i class="fas fa-arrow-left icon-back"></i> ¿Ya tienes cuenta? Inicia sesión
            </a>
        </div>

    </div>
</div>      