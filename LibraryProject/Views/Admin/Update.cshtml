@model LibraryProject.Application.DTO.Identity.AdminDTO.UpdateUserDTO
@{
    ViewData["Title"] = "Actualizar Usuario";
}

<div class="container-fluid py-4">
    <!-- Encabezado del formulario -->
    <div class="page-header">
        <div class="d-flex justify-content-between align-items-center">
            <h1 class="text-primary h3 mb-0 font-weight-bold">Actualizar Usuario</h1>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-1"></i> Atrás
            </a>
        </div>
    </div>

    <!-- Panel del formulario -->
    <div class="form-wrapper">
        <div class="form-container">
            <!-- Mostrar errores de validación -->
            <div asp-validation-summary="All" class="text-danger validation-summary"></div>

            <form asp-action="Update" method="post">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <div class="form-group">
                            <label asp-for="Id" class="form-label">ID</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-id-card"></i></span>
                                <input asp-for="Id" class="form-control" disabled />
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6 mb-3">
                        <div class="form-group">
                            <label asp-for="Nombre" class="form-label">Nombre de Usuario</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                                <input asp-for="Nombre" class="form-control" readonly />
                            </div>
                        </div>
                    </div>


                    <div class="col-md-6 mb-3">
                        <div class="form-group">
                            <label asp-for="Email" class="form-label">Email</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                <input asp-for="Email" class="form-control" placeholder="ejemplo@dominio.com" />
                            </div>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <div class="form-group">
                            <label for="password" class="form-label">Contraseña</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                <input id="password" name="password" type="password" class="form-control" placeholder="Dejar vacío para mantener la actual" />
                            </div>
                            <small class="text-muted">Dejar en blanco si no desea cambiar la contraseña</small>
                        </div>
                    </div>

                    <div class="col-md-6 mb-3">
                        <div class="form-group">
                            <label for="confirmPassword" class="form-label">Confirmar Contraseña</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                <input id="confirmPassword" name="confirmPassword" type="password" class="form-control" placeholder="Confirme la nueva contraseña" />
                            </div>
                            <span id="passwordMatchError" class="text-danger" style="display: none;">Las contraseñas no coinciden</span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4 mb-3">
                        <div class="form-group">
                            <label asp-for="Edad" class="form-label">Edad</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-birthday-cake"></i></span>
                                <input asp-for="Edad" class="form-control" placeholder="Ingrese la edad" type="number" min="18" />
                            </div>
                            <span asp-validation-for="Edad" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-4 mb-3">
                        <div class="form-group">
                            <label asp-for="Salario" class="form-label">Salario</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-dollar-sign"></i></span>
                                <input asp-for="Salario" class="form-control" placeholder="Ingrese el salario" type="number" step="0.01" />
                            </div>
                            <span asp-validation-for="Salario" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-actions mt-4">
                    <button type="submit" class="btn btn-primary btn-lg px-4" id="submitBtn">
                        <i class="fas fa-save me-2"></i> Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
