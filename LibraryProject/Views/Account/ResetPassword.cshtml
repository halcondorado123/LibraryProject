@model LibraryProject.Application.DTO.Identity.InitialDTO.ResetPasswordDTO

<style>
    /* Similar estilos al resto de páginas */
</style>

<div class="split-container">
    <div class="left-column"></div>
    <div class="right-column">
        <div class="recovery-container">
            <h2>Restablecer contraseña</h2>
            <p>Crea una nueva contraseña para tu cuenta.</p>

            <form asp-action="ResetPassword" method="post">
                <input type="hidden" asp-for="Token" />
                <input type="hidden" asp-for="Email" />

                <div class="form-group">
                    <label asp-for="Password">Nueva contraseña</label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Ingresa tu nueva contraseña" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ConfirmPassword">Confirmar contraseña</label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirma tu nueva contraseña" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="text-danger" asp-validation-summary="ModelOnly"></div>

                <button class="btn btn-primary mt-3" type="submit">Restablecer contraseña</button>
            </form>
        </div>
    </div>
</div>