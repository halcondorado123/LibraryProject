@model LibraryProject.Application.DTO.Identity.HomeDTO.AccessInfoDTO

<style>
    :root {
        --primary-color: #4e73df;
        --secondary-color: #858796;
        --success-color: #1cc88a;
    }

    body {
        background-color: #f8f9fc;
        font-family: 'Nunito', sans-serif;
    }

    .container {
        max-width: 600px;
    }

    .content-box {
        background-color: white;
        border-radius: 0.75rem;
        padding: 1.5rem 2rem;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1), 0 1px 3px rgba(0, 0, 0, 0.05);
        transition: all 0.3s ease-in-out;
    }

        .content-box:hover {
            box-shadow: 0 6px 14px rgba(0, 0, 0, 0.15), 0 2px 5px rgba(0, 0, 0, 0.1);
        }

    .text-primary {
        color: var(--primary-color);
    }

    .text-secondary {
        color: var(--secondary-color);
    }

    .text-success {
        color: var(--success-color);
    }

    .carousel-img {
        width: 80%;
        height: auto;
        object-fit: cover;
        border-radius: 10px;
    }

    .rating-box {
        background-color: white;
        border-radius: 0.75rem;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
        width: 100%;
        padding: 1.5rem;
    }

    .stars i {
        font-size: 1.8rem;
        color: #ccc;
        transition: color 0.3s, transform 0.2s;
    }

        .stars i.active {
            color: gold;
            transform: scale(1.2);
        }

    .user-comment {
        font-style: italic;
        color: var(--secondary-color);
        margin-top: 0.5rem;
    }

    .comment-date {
        font-size: 0.8rem;
        color: var(--secondary-color);
        text-align: right;
    }

</style>

<div class="container d-flex justify-content-center mt-4">
    <div class="content-box text-center">
        <h1 class="text-primary h3 mb-3 font-weight-bold">@Model.NombreUsuario</h1>
        <p class="text-secondary">Fecha y hora de acceso: <strong>@Model.FechaHora</strong></p>
        <p class="h5 text-success">Bienvenido a la aplicación</p>
    </div>
</div>

<!-- Carrusel original -->
<div class="table-wrapper">
    <div id="carouselUsuarios" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="./img/Biblioteca24horas.png" class="d-block mx-auto carousel-img" alt="Trabajo en equipo">
            </div>
            <div class="carousel-item">
                <img src="./img/bibliotecaparatodos(1).png" class="d-block mx-auto carousel-img" alt="Programación">
            </div>
            <div class="carousel-item">
                <img src="./img/Copia_revistas.png" class="d-block mx-auto carousel-img" alt="Programación">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselUsuarios" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Anterior</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselUsuarios" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Siguiente</span>
        </button>
    </div>
</div>

<div class="container mt-4">
    <!-- Sección "Tu experiencia" con 3 comentarios aleatorios del usuario -->
    <div class="row justify-content-center">
        <h4 class="text-primary text-center mb-3">Tu experiencia</h4>

        <!-- Estos 3 comentarios serán reemplazados aleatoriamente por JavaScript -->
        <div class="col-md-4 mb-4">
            <div class="rating-box">
                <div class="stars mb-2">
                    <i class="fa-solid fa-star active"></i>
                    <i class="fa-solid fa-star active"></i>
                    <i class="fa-solid fa-star active"></i>
                    <i class="fa-solid fa-star"></i>
                    <i class="fa-solid fa-star"></i>
                </div>
                <p class="user-comment">"El servicio fue muy útil para mi investigación"</p>
                <p class="comment-date">15/03/2023</p>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="rating-box">
                <div class="stars mb-2">
                    <i class="fa-solid fa-star active"></i>
                    <i class="fa-solid fa-star active"></i>
                    <i class="fa-solid fa-star active"></i>
                    <i class="fa-solid fa-star active"></i>
                    <i class="fa-solid fa-star"></i>
                </div>
                <p class="user-comment">"Excelente atención y recursos disponibles"</p>
                <p class="comment-date">22/05/2023</p>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="rating-box">
                <div class="stars mb-2">
                    <i class="fa-solid fa-star active"></i>
                    <i class="fa-solid fa-star active"></i>
                    <i class="fa-solid fa-star"></i>
                    <i class="fa-solid fa-star"></i>
                    <i class="fa-solid fa-star"></i>
                </div>
                <p class="user-comment">"Podría mejorar en algunos aspectos"</p>
                <p class="comment-date">10/06/2023</p>
            </div>
        </div>
    </div>

    <!-- Sección de comentarios de otros usuarios -->
    <div class="row justify-content-center mt-4">
        <h4 class="text-primary text-center mb-3">Comentarios de otros usuarios</h4>
        <!-- Los comentarios se generarán dinámicamente -->
        <div class="col-md-4 mb-4 comment-container"></div>
        <div class="col-md-4 mb-4 comment-container"></div>
        <div class="col-md-4 mb-4 comment-container"></div>
    </div>
</div>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        // Comentarios del usuario actual (ejemplo)
        const userComments = [
            { stars: 5, comment: "¡Excelente servicio! Encontré todo lo que necesitaba.", date: "15/03/2023" },
            { stars: 4, comment: "Muy buena experiencia, solo faltó más variedad en algunos temas.", date: "22/04/2023" },
            { stars: 3, comment: "Funciona bien, pero la interfaz podría ser más intuitiva.", date: "10/05/2023" },
            { stars: 5, comment: "Increíble recurso para investigadores. ¡Altamente recomendado!", date: "28/05/2023" },
            { stars: 2, comment: "Tuve algunas dificultades para encontrar lo que buscaba.", date: "05/06/2023" }
        ];

        // Comentarios de otros usuarios (ejemplo)
        const otherComments = [
            { name: "Juan Pérez", stars: 4, comment: "Muy buena experiencia, recomendado!", date: "15/05/2023" },
            { name: "Ana Gómez", stars: 5, comment: "Excelente servicio, me encantó!", date: "22/06/2023" },
            { name: "Carlos Rojas", stars: 3, comment: "Fue aceptable, pero puede mejorar.", date: "03/07/2023" }
        ];

        // Seleccionar 3 comentarios aleatorios del usuario
        const randomUserComments = [];
        const availableIndices = [...Array(userComments.length).keys()];

        for (let i = 0; i < 3 && availableIndices.length > 0; i++) {
            const randomIndex = Math.floor(Math.random() * availableIndices.length);
            const selectedIndex = availableIndices.splice(randomIndex, 1)[0];
            randomUserComments.push(userComments[selectedIndex]);
        }

        // Actualizar los comentarios del usuario
        const userCommentBoxes = document.querySelectorAll('.row.justify-content-center .col-md-4');
        randomUserComments.forEach((comment, index) => {
            if (index < userCommentBoxes.length) {
                const box = userCommentBoxes[index].querySelector('.rating-box');
                box.innerHTML = `
                            <div class="stars mb-2">${generateStars(comment.stars)}</div>
                            <p class="user-comment">"${comment.comment}"</p>
                            <p class="comment-date">${comment.date}</p>
                        `;
            }
        });

        // Mostrar comentarios de otros usuarios
        const commentContainers = document.querySelectorAll('.comment-container');
        otherComments.forEach((comment, index) => {
            if (index < commentContainers.length) {
                commentContainers[index].innerHTML = `
                            <div class="rating-box">
                                <h5 class="text-primary">${comment.name}</h5>
                                <div class="stars mb-2">${generateStars(comment.stars)}</div>
                                <p class="user-comment">"${comment.comment}"</p>
                                <p class="comment-date">${comment.date}</p>
                            </div>
                        `;
            }
        });

        // Función para generar estrellas
        function generateStars(count) {
            let stars = '';
            for (let i = 1; i <= 5; i++) {
                stars += `<i class="fa-solid fa-star ${i <= count ? 'active' : ''}"></i>`;
            }
            return stars;
        }
    });
</script>